extends partials/login-layout.pug

block content 
    .logincontainer 
        h1 Login 
        form(method="POST")
            p.errorMessage #{errorMessage}

            input(type="text", name="logUserName",placeholder="Username or Email", value=logUserName,required="")
            input(type="password", name="logPassword",placeholder="enter password",required="")
            input(type="submit",value='Login')
        a(href='/register') Need an account?  Register here.